<Page x:Class="MineSweeperDemo.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MineSweeperDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Margin="20,50,20,50">
        <StackPanel>
            <Label Content="Minefield Size:"/>
            <TextBox x:Name="txtMinefieldSize" Width="100"/>

            <Label Content="Mine Quantity:"/>
            <TextBox x:Name="txtMineQuantity" Width="100"/>

            <Button Content="Save" Click="BtnSave_Click"
                Margin="0,20,0,0" Width="60"/>
        </StackPanel>
    </Grid>
</Page>
