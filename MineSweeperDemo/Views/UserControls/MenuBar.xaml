<UserControl x:Class="MineSweeperDemo.Views.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MineSweeperDemo.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Column="1">
            <MenuItem Name="menuGame"
                  Header="Game" FontSize="15">
                <MenuItem Header="Save Game" Click="SaveGame_Click"/>
                <MenuItem Header="New Game" Click="NewGame_Click"/>
                <MenuItem Header="Restart" Click="Restart_Click"/>
                <MenuItem Header="Main Menu" Click="GoToMainMenu_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            
        </Menu>
    </Grid>
</UserControl>
