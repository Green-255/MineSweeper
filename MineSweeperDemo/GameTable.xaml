<Page x:Class="MineSweeperDemo.GameTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:MineSweeperDemo.Views.UserControls"
      xmlns:local="clr-namespace:MineSweeperDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameTable">

    <Grid x:Name="gameWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <userControls:MenuBar x:Name="menuBar"
                         Grid.Row="0" Grid.Column="0"/>

        <Grid x:Name="gameGrid" Grid.Row="1" Grid.Column="0"
              HorizontalAlignment="Center" VerticalAlignment="Center">

        </Grid>
    </Grid>
</Page>
